{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "types": ["node"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* file path */
    "baseUrl": "",
    "paths": {
        "@pages/*": [
            "src/pages/*"
        ],
        "@components/*": [
            "src/components/*"
        ],
        "@utils/*": [
            "src/utils/*"
        ],
        "@layouts/*": [
            "src/layouts/*"
        ],
        "@api/*": [
            "src/api/*"
        ],
        "@providers/*": [
            "src/providers/*"
        ],
        "@store/*": [
            "src/store/*"
        ],
        "@constants/*": [
            "src/constants/*"
        ],
        "types/*": [
            "src/types/*"
        ]
    }
  },
  "include": ["vite.config.ts"]
}
